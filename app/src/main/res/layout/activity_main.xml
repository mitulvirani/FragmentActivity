       android:id="@+id/f1" />

    <fragment
        android:name="com.example.fragmentactivity.Fragment.Fragment2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/f2"
        />

    <fragment
        android:name="com.example.fragmentactivity.Fragment.Fragment3"
        android:layout_weight="1"
